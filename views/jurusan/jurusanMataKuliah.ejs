<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../stylesheets/jurasanMataKuliah.css">
    <title>Jurusan</title>
</head>

<body>
    <div class="menu">
        <div class="profile">
            <div class="profile-icon">
                <img src="profile_icon.png" alt="Profile Icon">
            </div>
            <div class="email">
                <a href="/prodi">
                    <%= userEmail %>
                </a>
            </div>
        </div>
        <div class="detail-menu">
            <ul>
                <li><a href="/prodi/matakuliah">Manajemen Mata Kuliah</a></li>
                <li><a href="">Manajemen Dosen</a></li>
                <li><a href="">Manajemen Perkuliahan</a></li>
            </ul>
        </div>
        <div class="keluar" id="keluarBtn">Keluar</div>
    </div>
    <div class="hasil">
        <div class="header">
            <h1>Manajemen Mata Kuliah</h1>
            <button class="add-btn" data-toggle="modal" data-target="#addMatkulModal">+</button>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Kode Mata Kuliah</th>
                    <th>Nama Mata Kuliah</th>
                    <th>Semester</th>
                    <th>TA</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% matkuls.forEach(matkul=> { %>
                    <tr>
                        <td>
                            <%= matkul.kode_matkul %>
                        </td>
                        <td>
                            <%= matkul.nama_matkul %>
                        </td>
                        <td>
                            <%= matkul.semester %>
                        </td>
                        <td>
                            <%= matkul.tahun_ajaran %>
                        </td>
                        <td>
                            <button class="edit-btn" data-toggle="modal" data-target="#editMatkulModal"
                                data-kode-matkul="<%= matkul.kode_matkul %>"
                                data-nama-matkul="<%= matkul.nama_matkul %>" data-semester="<%= matkul.semester %>"
                                data-tahun-ajaran="<%= matkul.tahun_ajaran %>">Edit</button>
                            <button class="delete-btn" data-toggle="modal" data-target="#deleteMatkulModal"
                                data-kode-matkul="<%= matkul.kode_matkul %>">Delete</button>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Modal for adding a new matkul -->
    <div class="modal fade" id="addMatkulModal" tabindex="-1" role="dialog" aria-labelledby="addMatkulModalLabel"
        aria-hidden="true">
        <!-- Modal content goes here -->
    </div>

    <!-- Modal for editing a matkul -->
    <div class="modal fade" id="editMatkulModal" tabindex="-1" role="dialog" aria-labelledby="editMatkulModalLabel"
        aria-hidden="true">
        <!-- Modal content goes here -->
    </div>

    <!-- Modal for deleting a matkul -->
    <div class="modal fade" id="deleteMatkulModal" tabindex="-1" role="dialog" aria-labelledby="deleteMatkulModalLabel"
        aria-hidden="true">
        <!-- Modal content goes here -->
    </div>
</body>
<script src="../javascripts/berandaJurusan.js"></script>

</html>